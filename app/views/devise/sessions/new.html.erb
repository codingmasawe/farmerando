<div class="container container-100-vh d-flex flex-column text-center justify-content-center">
  <h1 class="brand">farmerando</h1>
  <h5>Log in</h5>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs justify-content-center">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "rounded-input"},
                  placeholder: "please type in your email",
                  label_html: {class: "d-none"}%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class: "rounded-input mt-3"},
                  placeholder: "please type in your password",
                  label_html: {class: "d-none"}%>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions justify-content-center">
      <%= f.button :submit, "Log in", class: "btn btn-main" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
