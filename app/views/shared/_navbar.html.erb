<div class="navbar navbar-expand-sm navbar-light navbar-farmerando">
  <%= link_to "farmerando", dashboards_path, class: "navbar-brand" %>
  <%= link_to farmer_transactions_path do %>
    <i class="fas fa-comments-dollar navbar-icon"></i>
  <% end %>
  <%= link_to '#' do %>
    <i class="fas fa-store navbar-icon"></i>
  <% end %>

  <%= link_to my_products_path do %>
    <i class="fas fa-carrot navbar-icon"></i>
  <% end %>

  <%= image_tag current_user.img_url, id: "settings-cog", onclick: "toggleOn()", alt: "User Avatar", class: "avatar-navbar" %>

  <!-- <i class="fas fa-cog navbar-icon" id="settings-cog" onclick="toggleOn()"></i> -->
  <div class="settings-collapsed settings-hidden" id="cog-collapsed">
    <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
    <% else %>
      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
    <% end %>
  </div>
</div>

<script>
  const toggleOn = () => {
    const cog = document.getElementById("cog-collapsed");
    if (cog.classList.contains("settings-hidden")) {
      cog.classList.remove("settings-hidden")
    } else {
      cog.classList.add("settings-hidden")
    }
  }
</script>
