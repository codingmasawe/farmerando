<div class="container">
  <div>
    <h4 class="greeting">
      <%= current_user.first_name %>, list your products
    </h4>
  </div>
  <% @farmer_products.each do |fp| %>
    <div class="d-flex align-items-center mb-3 justify-content-between">
      <div class="d-flex align-items-center">
        <div class='mr-2'><%= image_tag fp.product.img_url, width: "30" %> </div>
        <p class="mb-0"><%= fp.product.name.capitalize %> </p>
      </div>
      <%= link_to "Remove product", farmer_product_path(fp), remote: true, method: :delete, class:'btn btn-transaction-small'  %>
    </div>
  <% end %>
  <p>Add a new product that I grow</p>

    <%= render 'farmer_products/new', fp: FarmerProduct.new %>

</div>
